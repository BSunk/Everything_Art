<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:actionMenuTextColor">@color/text_color_white</item>
        <item name="android:textColor">@color/main_activity_background</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
    </style>

    <style name="AppTheme.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>

    <style name="DetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="floating_action_button">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="detail_header">
        <item name="android:textSize">@dimen/heading_font_size</item>
        <item name="android:layout_marginTop">@dimen/heading_margin_top</item>
        <item name="android:layout_marginStart">@dimen/heading_margin_left</item>
    </style>

    <style name="sub_detail_header">
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:layout_marginTop">@dimen/body_margin_top</item>
        <item name="android:layout_marginStart">@dimen/heading_margin_left</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
